// ============================================================
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------
    // Users collection
    // Only the authenticated owner can read or write their own
    // document. Anonymous users can also own their document
    // (Firebase assigns them a UID too).
    // -------------------------------------------------------
    match /Users/{userId} {
      allow read, write: if request.auth != null
                         && request.auth.uid == userId;
    }

    // -------------------------------------------------------
    // Deny all other access by default
    // -------------------------------------------------------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}